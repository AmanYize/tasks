{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist", // Output compiled files to the `dist` folder
    "rootDir": "./", // Root directory of TypeScript files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"], // Include all TypeScript files
  "exclude": ["node_modules"] // Exclude dependencies
}
